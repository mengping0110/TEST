
<h2>檔案上傳</h2>

@if (ViewBag.Message != null)
{
    <div id="messageAlert" style="padding: 10px; margin-bottom: 20px; background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; border-radius: 4px;">
        @ViewBag.Message
    </div>
}

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="file" name="FileUpload_FileName" />
    <button type="submit">開始上傳</button>
</form>

<script>
    setTimeout(function() {
        var msg = document.getElementById('messageAlert');
        if (msg) msg.style.display = 'none';
    }, 3000);
</script>