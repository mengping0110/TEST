@model MemberVM

@{
    ViewData["Title"] = "新增會員資料";
}

<style>
    .page-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .form-label {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .required-star {
        color: #d93025;
        margin-left: 0.25rem;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    .accesskey {
        color: transparent;
        position: absolute;
        top: 0;
        left: 0;
    }
</style>

<a href="#C" id="AC" name="C" title="中央內容區" accesskey="C" class="accesskey">:::</a>

<main class="container mt-4" id="main-content">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h1 class="page-title">新增會員資料</h1>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="@Url.Action("List", "Home")" class="btn btn-outline-secondary" role="button" title="返回會員清單">
                <i class="bi bi-arrow-left" aria-hidden="true"></i> 返回清單
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-light text-black">
            <h2 class="h5 mb-0">請填寫會員資訊</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-12 mb-4">
                        <label for="NAME" class="form-label">
                            @Html.DisplayNameFor(model => model.NAME)
                            <span class="required-star" aria-hidden="true">*</span>
                            <span class="sr-only">(必填)</span>
                        </label>
                        <input asp-for="NAME" id="NAME" class="form-control form-control-lg" placeholder="請輸入姓名" aria-required="true" />
                        <span asp-validation-for="NAME" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label for="INFO" class="form-label">@Html.DisplayNameFor(model => model.INFO)</label>
                    <textarea asp-for="INFO" id="INFO" class="form-control form-control-lg" rows="4" placeholder="請輸入自我介紹內容"></textarea>
                    <span asp-validation-for="INFO" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-primary btn-lg px-5 shadow" title="確認送出新增資料">
                        <i class="bi bi-check-lg" aria-hidden="true"></i> 儲存資料
                    </button>
                    <a href="@Url.Action("List", "Home")" class="btn btn-light btn-lg px-5 border" role="button">取消</a>
                </div>
            </form>
        </div>
    </div>
</main>