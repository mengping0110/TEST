@model TEST.Models.Member

@{
    ViewData["Title"] = "會員詳細資料 - " + Model?.NAME;
}

<style>
    .page-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .table-label {
        font-size: 1rem;
        font-weight: bold;
        background-color: #f8f9fa;
        width: 30%;
    }

    .table-data {
        font-size: 1rem;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    .accesskey {
        color: transparent;
        position: absolute;
        top: 0;
        left: 0;
    }
</style>

<a href="#C" id="AC" name="C" title="中央內容區" accesskey="C" class="accesskey">:::</a>

<main class="container mt-4" id="main-content">

    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h1 class="page-title">會員詳細資料</h1>
        </div>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered align-middle mb-0" aria-label="會員詳細資料表格">
            <tbody>
                <tr>
                    <th scope="row" class="table-light text-end" style="width: 25%;">
                        @Html.DisplayNameFor(model => model.Pid)
                    </th>
                    <td class="table-data">
                        @Html.DisplayFor(model => model.Pid)
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="table-light text-end">
                        @Html.DisplayNameFor(model => model.NAME)
                    </th>
                    <td class="table-data fw-bold text-primary">
                        @Html.DisplayFor(model => model.NAME)
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="table-light text-end">
                        @Html.DisplayNameFor(model => model.INFO)
                    </th>
                    <td class="table-data">
                        <div class="text-wrap" style="word-break: break-all;">
                            @Html.DisplayFor(model => model.INFO)
                        </div>
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="table-light text-end">
                        @Html.DisplayNameFor(model => model.CreateDt)
                    </th>
                    <td class="table-data text-muted">
                        <time datetime="@Model?.CreateDt.ToString("yyyy-MM-dd")">
                            @Model?.CreateDt.ToString("yyyy/MM/dd HH:mm:ss")
                        </time>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-5 mb-5 d-flex justify-content-center align-items-center gap-3">
        <h2 class="sr-only">操作選項</h2> 

        <a href="@Url.Action("Edit", "Home", new { id = Model?.ID })"
           class="btn btn-primary btn-lg px-5 shadow"
           role="button"
           title="編輯 - @Model?.NAME 的資料">
            <i class="bi bi-pencil-square" aria-hidden="true"></i>
            <span class="sr-only">編輯圖示</span> 編輯資料
        </a>

        <a href="@Url.Action("List", "Home")"
           class="btn btn-outline-secondary btn-lg px-5 shadow-sm"
           role="button"
           title="返回會員清單">
            <i class="bi bi-arrow-left" aria-hidden="true"></i>
            <span class="sr-only">返回圖示</span> 返回清單
        </a>
    </div>
</main>